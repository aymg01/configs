#!/bin/sh

separador(){
    echo
    echo '-----------------------------------------------'|/bin/grep --color=auto .
    echo
}


replicar(){
    debmirror\
            --arch=i386\
            --method=http\
            --max-batch=2000\
            --nosource\
            --passive\
            --progress\
            --ignore-release-gpg\
            --ignore-small-errors\
            --verbose\
            $@
#            --proxy=http://proxy2.unsa.edu.ar:8080\
}

