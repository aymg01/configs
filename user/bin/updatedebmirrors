#        --section=main,contrib,non-free\
#        $opciones\
#        debian-security
#fi
#separador
#sleep 5

if pid debmirror br.archive.ubuntu.com > /dev/null
then echo br.archive.ubuntu.com ya est치 trabajando
else replicar\
        --host=br.archive.ubuntu.com\
        --root=ubuntu\
        --dist=lucid\
        --section=main,multiverse,restricted,universe\
        $opciones\
        ubuntu
fi
separador
sleep 5

