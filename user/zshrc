apt-cache(){
    LANG="C"
    /usr/bin/apt-cache $@
    LANG="es_AR.UTF-8"
}

# Util para escribir reglas de auto-propiedades de pekwm
propstring () {
  echo -n 'Property '
  xprop WM_CLASS | sed 's/.*"\(.*\)", "\(.*\)".*/= "\1,\2" {/g'
  echo '}'
}


